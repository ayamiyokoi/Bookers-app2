<% if @user.errors.any? %>
  <%= @user.errors.count %>件のerrorが発生しました
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>User info</h2>
<%= form_with model:@user, local:true do |f| %>
  <p><label for="inputName">Name</label><br>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%></p>

  <p><label for="inputImage">Image</label><br>
  <%= f.attachment_field :profile_image, placeholder: "Image" %></p>

  <p><label for="user_introduction">Introduction</label><br>
  <%= f.text_area :introduction, id: 'user_introduction', placeholder: "Introduction" %></p>
  <p><%= f.submit "Update User", class: "btn btn-secondary" %></p>
<% end %>
</div>