<h2>User info</h2>
<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%>
  <label for="inputImage">Image</label>
  <%= f.attachment_field :profile_image, placeholder: "Image" %>
  <label for="user_introduction">Introduction</label>
  <%= f.text_area :introduction, id: 'user_introduction', placeholder: "Introduction" %>
  <%= f.submit "Update uesr" %>
<% end %>