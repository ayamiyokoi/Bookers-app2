 <div class="profile-container">
    <h1>User info</h1>
    <table>
      <tr>
        <%= attachment_image_tag new_user, :profile_image, size: '100x100', format: 'jpeg', fallback: "no_image.jpg" %>
      </tr>
      <tr>
        <th>name</th>
        <td><%= new_user.name %></td>
      </tr>
      <tr>
        <th>introduction</th>
        <td><%= new_user.introduction %></td>
      </tr>
    </table>
    <% if @user.id == current_user.id %>
     <div class="row"><%= link_to edit_user_path(new_user), class: "btn btn-outline-secondary btn-lg btn-block" do %>
     <i class="fas fa-user-cog"></i>
     <% end %></div>
     <% else %>
     <div class="row"><%= link_to "#", class: "btn btn-outline-secondary btn-lg btn-block" do %>
     <i class="fas fa-user-cog"></i><% end %>
     </div>
     <% end %>
  </div>