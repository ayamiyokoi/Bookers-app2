<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info', new_user: @user %>
      <%= render 'books/form', new_book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
      <table class="table table-striped">
        <thead>
         <tr>
           <th>image</th>
           <th>name</th>
           <th colspan="3"></th>
         </tr>
        </thead>
       <tbody>
         <% @users.each do |user| %>
           <tr>
             <td><%= attachment_image_tag user, :profile_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg" %></td>
             <td><%= user.name %></td>
             <td><%= link_to "Show", user_path(user) %></td>
           </tr>
         <% end %>
       </tbody>
      </table>
   </div>
  </div>
</div>