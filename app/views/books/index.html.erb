<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<!--左上部分-->
<div class="row ">
 <div class="col-md-3">
 <%= render 'users/info', new_user: @user %>

<!--左下部分-->
<%= render 'books/form', new_book: @book %>
</div>

<!--右側-->
<div class="col-md-8 offset-md-1">
<h1>Books</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= attachment_image_tag book.user, :profile_image, size: '40x40', fallback: "no_image.jpg" %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
 </table>

 </div>
</div>