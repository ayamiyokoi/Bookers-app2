<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<div class="container px-5 px-sm-0">
<div class="row">
<div class="col-md-3">
  <%= render 'users/info', new_user: @user_new %>

<!--左下部分-->

<%= render 'books/form', new_book: @book_new %>
</div>

<div class="col-md-8 offset-md-1">
  <h1>Book detail</h1>
  <table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% if @user_new.id == current_user.id %>
      <td><%= link_to user_path(current_user.id) do %> <%= attachment_image_tag @book.user, :profile_image, size: '40x40', fallback: "no_image.jpg" %><% end %><br><%=link_to current_user.name, user_path(current_user.id)%></td>
      <td><%= link_to @book.title, book_path(@book.id) %></td>
      <td><%= @book.body %></td>
      <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %></td>
      <td><%= link_to "Destroy", book_path(@book),class: "btn btn-danger", method: :delete %></td>
      <% else %>
      <td><%= link_to user_path(@user_new.id) do %><%= attachment_image_tag @book.user, :profile_image, size: '40x40', fallback: "no_image.jpg" %><% end %><br><%=link_to @user_new.name, user_path(@user_new.id) %></td>
      <td><%= link_to @book.title, book_path(@book.id) %></td>
      <td><%= @book.body %></td>
      <td></td>
      <td></td>
      <% end %>
    </tr>
  </tbody>
  </table>
</div>

</div>
</div>