<div class="row">
<div class="col-md-3">
  <div class="profile-container">
  <h1>User info</h1>
  <p>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></p>
  <h3 class="profile-name"><%= @user.name %></h3>
  <p>introduction</p>
  <p><i class="fas fa-user-cog"></i><%= link_to "", edit_user_path(@user), class: "btn btn-outline-secondary"%></p>
</div>

<!--左下部分-->
<h1>New Book</h1>
<!-- form_with部分 -->
<%= form_with model: @book, url:'/books', local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <p><%= f.submit 'Create Book' %></p>
<% end %>
</div>

<div class="col-md-8 offset-md-1">
  <h1>Book Detail</h1>
  <table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= attachment_image_tag @book.user, :profile_image, :size, 40, 40, fallback: "no_image.jpg" %><br><%= current_user.name %></td>
      <td><%= link_to @book.title, book_path(@book.id) %></td>
      <td><%= @book.body %></td>
      <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %></td>
      <td><%= link_to "Destroy", destroy_book_path(@book),class: "btn btn-danger", method: :delete %></td>
    </tr>
  </tbody>
  </table>
</div>

</div>