<div>
   <h1>New book</h1>
<!-- form_with部分 -->
  <%= form_with model: new_book, url:'/books', local:true do |f| %>
   <div class="form-group">
     <%= f.label :Title %>
   <%= f.text_field :title %></div>
   <div class="form-group">
     <%= f.label :Opinion %>
   <%= f.text_area :body %></div>
   <div class="form-group"><%= f.submit 'Create Book' %></div>
  <% end %>
</div>